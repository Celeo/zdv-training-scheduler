generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TeacherRating {
  cid           Int       @id
  minorGround   Boolean   @default(false)
  majorGround   Boolean   @default(false)
  minorTower    Boolean   @default(false)
  majorTower    Boolean   @default(false)
  minorApproach Boolean   @default(false)
  majorApproach Boolean   @default(false)
  center        Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model TrainingSchedule {
  id            Int      @id @default(autoincrement())
  Instructor    Int
  dayOfWeek     Int
  timeOfDay     Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TrainingSession {
  id            Int      @id @default(autoincrement())
  instructor    Int
  student       Int?
  start         String
  end           String
  status        String   @default("open")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model UserBlocklist {
  cid           Int      @id
  createdAt     DateTime @default(now())
  reason        String
}
