generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TrainerRating {
  cid           Int      @id
  minorGround   Boolean  @default(false)
  majorGround   Boolean  @default(false)
  minorTower    Boolean  @default(false)
  majorTower    Boolean  @default(false)
  minorApproach Boolean  @default(false)
  majorApproach Boolean  @default(false)
  center        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TrainingSchedule {
  id        Int      @id @default(autoincrement())
  trainer   Int
  dayOfWeek Int
  timeOfDay String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trainingSessions           TrainingSession[]
  trainingScheduleExceptions TrainingScheduleException[]
}

model TrainingScheduleException {
  id         Int    @id @default(autoincrement())
  scheduleId Int
  date       String

  schedule TrainingSchedule? @relation(fields: [scheduleId], references: [id])
}

model TrainingSession {
  id         Int      @id @default(autoincrement())
  scheduleId Int?
  trainer    Int
  student    Int?
  position   String?
  dateTime   DateTime
  status     String   @default("open")
  notes      String   @default("")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  schedule TrainingSchedule? @relation(fields: [scheduleId], references: [id])
}

model UserBlocklist {
  cid       Int      @id
  reason    String
  createdAt DateTime @default(now())
}

model UserPreference {
  cid                    Int     @id
  receiveEmails          Boolean @default(false)
  receiveDiscordMessages Boolean @default(true)
}

model DiscordMessage {
  id          Int       @id @default(autoincrement())
  cid         Int
  message     String
  createdAt   DateTime  @default(now())
  completedAt DateTime?
}
