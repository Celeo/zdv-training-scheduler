generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TeacherRating {
  cid           Int      @id
  minorGround   Boolean  @default(false)
  majorGround   Boolean  @default(false)
  minorTower    Boolean  @default(false)
  majorTower    Boolean  @default(false)
  minorApproach Boolean  @default(false)
  majorApproach Boolean  @default(false)
  center        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TrainingSchedule {
  id         Int      @id @default(autoincrement())
  instructor Int
  dayOfWeek  Int
  timeOfDay  Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  trainingSessions TrainingSession[]
}

model TrainingSession {
  id               Int      @id @default(autoincrement())
  scheduleId       Int?
  instructor       Int
  student          Int?
  selectedPosition String?
  date             String
  time             Int
  status           String   @default("open")
  notes            String   @default("")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  schedule TrainingSchedule? @relation(fields: [scheduleId], references: [id])
}

model UserBlocklist {
  cid       Int      @id
  reason    String
  createdAt DateTime @default(now())
}

model UserPreference {
  cid                    Int     @id
  receiveEmails          Boolean @default(true)
  receiveDiscordMessages Boolean @default(false)
}

model DiscordMessage {
  id          Int       @id @default(autoincrement())
  cid         Int
  message     String
  createdAt   DateTime  @default(now())
  completedAt DateTime?
}

model Log {
  id      Int      @id @default(autoincrement())
  message String
  date    DateTime @default(now())
}
