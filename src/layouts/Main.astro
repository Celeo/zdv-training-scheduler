---
import Site from "./Site.astro";
import { SessionIcon } from "../components/SessionIcon.tsx";

interface Props {
  title: string;
  hideSessionIcon?: boolean;
  showBackButton?: boolean;
}

const { title, hideSessionIcon, showBackButton } = Astro.props;
---

<Site title={title}>
  {
    showBackButton && (
      <div class="float-left pt-2 pl-2">
        <a
          href="/"
          class="text-blue-100 bg-gray-500 hover:bg-gray-600 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2"
        >
          Home
        </a>
      </div>
    )
  }
  {!hideSessionIcon && <SessionIcon client:load />}

  <div class="container mx-auto pt-4">
    <slot />
  </div>
</Site>
